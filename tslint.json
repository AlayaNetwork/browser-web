{
    "defaultSeverity": "error",
    "extends": "tslint-config-standard",
    "globals": {
        "require": true
    },
    "rules": {
        "curly": true, //for if do while 要有括号
        "comment-format":false,
        "no-var-keyword": true,
        "no-var-requires": true, //不允许使用var module = require("module"),用 import foo = require('foo')导入
        "space-before-function-paren": false,
        "whitespace": [
            false
        ],
        "no-consecutive-blank-lines": false,
        "no-angle-bracket-type-assertion": false,
        "no-empty": [
            false,
            "allow-empty-catch"
        ], //块语句中的内容不能为空 允许catch为空代码块
        "only-arrow-functions": [
            true,
            "allow-declarations",
            "allow-named-functions"
        ], //允许箭头表达式，不需要传统表达式 ； 允许独立的函数声明  ；允许表达，function foo() {}但不是function() {}
        "no-empty-character-class": false,
        "indent": [
            true,
            "spaces",
            4
        ],
        "quotemark": [
            true,
            "single"
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}